@{
    TempData.Keep();
    string? currentPage = Convert.ToString(ViewContext.RouteData.Values["Page"])!;
}

<!-- Menu -->

<section>
    <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">

    @* ! Hide app brand if navbar-full *@
    <div class='app-brand demo @((@ViewData["navbarFull"] != null && Convert.ToBoolean(@ViewData["navbarFull"])) ? "d-xl-none" : "")'>
        <a asp-page="/Index" class="app-brand-link">
           @* <span class="app-brand-logo demo">
                @await Html.PartialAsync("../_Partials/_Macros")
            </span>*@
            <span class="app-brand-text demo menu-text fw-bold">@Html.Raw((JsonConvert.DeserializeObject<LocalizerObj>(TempData.Peek("appName").ToString())).SharedResource)</span>
        </a>

        <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto">
            <i class="ti menu-toggle-icon d-none d-xl-block ti-sm align-middle"></i>
            <i class="ti ti-x d-block d-xl-none ti-sm align-middle"></i>
        </a>
    </div>

    <div class="menu-inner-shadow"></div>

    @* ! Full version menu-items *@
    <ul class="menu-inner py-1">
        <!-- Dashboards -->
        

        <!-- Layouts -->
  

        <!-- Apps & Pages -->
        <li class="menu-header small text-uppercase">
            <span class="menu-header-text">Apps &amp; Pages</span>
        </li>
        <li class='menu-item@(currentPage == "/Home/DemandeCredit" ? " active" : "")'>
            <a asp-controller="Home" asp-action="DemandeCredit" class="menu-link">
                <i class="menu-icon tf-icons ti ti-mail"></i>
                <div data-i18n="Demande de crédit">Demande de crédit.</div>
            </a>
        </li>
        <li class='menu-item@(currentPage == "/Home/MesDemandes" ? " active" : "")'>
            <a asp-controller="Home" asp-action="MesDemandes" class="menu-link">
                <i class="menu-icon tf-icons ti ti-messages"></i>
                <div data-i18n="Mes demandes">Mes demandes</div>
            </a>
        </li>
    </ul>

</aside>
</section>
   
<!-- / Menu -->
