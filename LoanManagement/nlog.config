<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
		  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		  autoReload="true"
		  internalLogLevel="Trace"
		  internalLogFile="${currentdir}\Logging\internal_logs\internallog.txt">
		<targets>
			<target name="logfile" xsi:type="File"
					fileName="${currentdir}/Logging/logs/${shortdate}_logfile.log"
					layout="${longdate} ${event-properties:item=EventId_Id:whenEmpty=0} ${level:uppercase=true} ${message}" />
		</targets>
		<rules>
			<logger name="*" minlevel="Debug" writeTo="logfile" />
		</rules>
	</nlog>

</configuration>