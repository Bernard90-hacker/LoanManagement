@{
	TempData.Keep();
}

<!-- Menu -->
<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">

	<div class='app-brand demo @((@ViewData["navbarFull"] != null && Convert.ToBoolean(@ViewData["navbarFull"])) ? "d-xl-none" : "")'>
		<a asp-area="" asp-controller="Home" asp-action="Index" class="app-brand-link gap-2">
			<span class="app-brand-logo demo">
				<img src="~/logos/bia.png" alt="bia-logo" class="h-auto rounded-circle" width="40" height="40">
			</span>
		</a>

		<a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto">
			<i class="ti menu-toggle-icon d-none d-xl-block ti-sm align-middle"></i>
			<i class="ti ti-x d-block d-xl-none ti-sm align-middle"></i>
		</a>
	</div>

	<div class="menu-inner-shadow"></div>

	@* ! Menu-items de la version complète *@
	<ul class="menu-inner py-1">
		<!-- Accueil -->
		<li class='menu-item @Html.IsMenuActive(controllers: "Home", actions: "Index")'>
			<a asp-area="" asp-controller="Home" asp-action="Index" class="menu-link">
				<i class="menu-icon tf-icons ti ti-telescope"></i>
				<div>Accueil</div>
			</a>
		</li>

		<!-- Autres -->
		<li class='menu-item @Html.IsMenuActive(controllers: "Home", actions: "Credit")'>
			<a asp-area="" asp-controller="Home" asp-action="Credit" class="menu-link">
				<i class="menu-icon tf-icons ti ti-palette"></i>
				<div>Demande de crédit</div>
			</a>
		</li>
		<li class='menu-item @Html.IsMenuActive(controllers: "Home", actions: "MesDemandes")'>
			<a asp-area="" asp-controller="Home" asp-action="MesDemandes" class="menu-link">
				<i class="menu-icon tf-icons ti ti-dashboard"></i>
				<div>Mes demandes de crédit</div>
			</a>
		</li>
	</ul>
</aside>
<!-- / Menu -->
